<meta name="viewport" content="width=device-width, initial-scale=1.0">

<%- include('../blocks/header', {bot, user, path}) %>
<div class="container">
	<div class="row justify-content-md-center">
		<h2 style="color:#fff;">Sunucu İstatistikleri</h2>
	</div>
	<div class="row">
		<div class="col col-6">
			<%- include('../blocks/guild-card', {guild}) %>
		</div>
		<div class="col">
				<%
				let region = {
					"us-central": "Amerika",
					"us-east": "Doğu Amerika",
					"us-south": "Güney Amerika",
					"us-west": "Batı Amerika",
					"eu-west": "Batı Avrupa",
					"eu-central": `Avrupa`,
					"singapore": "Singapur",
					"london": "Londra",
					"japan": "Japonya",
					"russia": "Rusya",
					"hongkong": "Hong Kong",
					"brazil": "Brezilya",
					"singapore": "Singapur",
					"sydney": "Sidney",
					"southafrica": "Güney Afrika"
				} %>
      	<ul class="list-group">
					<li class="list-group-item">
						<div class="form-group">
            <i class="fa fa-fw fa-cog" aria-hidden="true"></i> Sunucu Adı: <%= guild.name %>
          </div>
          </li>
          	<li class="list-group-item">
              <div class="form-group">
             <i class="fa fa-fw fa-server" aria-hidden="true"></i> Sunucu Konumu: <%= region[guild.region] %>
          </div>
          </li>
			
          <li class="list-group-item">
              <div class="form-group">
          <i class="fa fa-fw fa-user" aria-hidden="true"></i> Sunucu Sahibi: <%= guild.owner.user.tag %>
          </div>
          </li>
          
            <li class="list-group-item">
              <div class="form-group">
          <i class="fa fa-fw fa-tasks" aria-hidden="true"></i> Sunucu ID: <%= guild.id %>
          </div>
          </li>
          
        <li class="list-group-item">
          <div class="form-group">
            <i class="fa fa-fw fa-tasks" aria-hidden="true"></i> Sunucu Oluşturulma Tarihi: <%= guild.createdTimestamp %>
          </div>
          </li>
          
      <li class="list-group-item">
        <div class="form-group">
      <i class="fa fa-fw fa-users" aria-hidden="true"></i> Kullanıcı Sayısı: <%= guild.members.filter(m => !m.user.bot).size %>
          </div>
          </li>
          
      <li class="list-group-item">
      <div class="form-group">
      <i class="fa fa-fw fa-android" aria-hidden="true"></i> Bot Sayısı: <%= guild.members.filter(m => m.user.bot).size %>
          </div>
          </li>
          
              <li class="list-group-item">
      <div class="form-group">
      <i class="fa fa-fw fa-hashtag" aria-hidden="true"></i> Kanal Sayısı: <%= guild.channels.size %>
          </div>
          </li>
          
                       <li class="list-group-item">
      <div class="form-group">
     <i class="fa fa-fw fa-user-circle-o" aria-hidden="true"></i> Rol Sayısı: <%= guild.roles.size %>
          </div>
          </li>
      </ul>
		</div>
	</div>
</div>

<% include ../blocks/guild-modals %>
<script type="text/javascript">
	let kur = {
			"01": "Ocak",
			"02": "Şubat",
			"03": "Mart",
			"04": "Nisan",
			"05": "Mayıs",
			"06": "Haziran",
			"07": "Temmuz",
			"08": "Ağustos",
			"09": "Eylül",
			"10": "Ekim",
			"11": "Kasım",
			"12": "Aralık"
	}
	var ts = parseInt($('#guildCreate').text());
	$('#guildCreate').html(`<strong>${moment(ts).format('DD')} ${kur[moment(ts).format('MM')]} ${moment(ts).format('YYYY h:mm:ss')}</strong>`);
</script>

<div style="width: 100%; text-align: right; margin-top: 20px;" >
          <a class="btn btn-success" href="/panel/<%= guild.id %>/" role="button">Geri Dön</a>
				</div>

<%- include('../blocks/footer') %>